{
	"compilerOptions": {
		// For Node.js >=14 or modern browsers, ES2020 or newer is typically safe
		"target": "es2020",

		// commonjs: Node.js with require()
		"module": "commonjs",

		// ES2020: Includes JS built-ins like Map, Set, Promise
		"lib": ["ES2020"],

		"rootDir": "src",
		"outDir": "out",
		"sourceMap": true,

		// Enable all strict type-checking options
		"strict": true
	},
	"exclude": ["node_modules"]
}
